{
  "manifest_version": 3,
  "name": "URL Checker",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*",
    "ftp://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*", "ftp://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
